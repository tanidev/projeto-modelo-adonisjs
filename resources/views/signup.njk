<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Projeto Modelo - Criar conta</title>
  <!-- Bootstrap -->
  <link href="/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="col-md-12">
      <div class="modal-dialog" style="margin-bottom:0">
          <div class="modal-content">
              <div class="panel-heading">
                  <h1 class="panel-title"><center>Criar uma conta</center></h1>
              </div>
              <div class="panel-body">
                  {% include 'template/messages' %}
                  <form class="form-horizontal" action="/signup" method="post">
                      {{ csrfField }}
                      <fieldset>
                        <div class="form-group {% if error.nome %} has-error {% endif %}">
                          <label for="nome" class="control-label col-sm-2">Nome</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" id="nome" name="nome"
                              placeholder="Nome completo" value="{{usuario.nome}}" autofocus required>
                              {% if error.nome %}
                                <span class="help-block">{{error.nome}}</span>
                              {% endif %}
                          </div>
                        </div>

                        <div class="form-group {% if error.email %} has-error {% endif %}">
                          <label for="email" class="control-label col-sm-2">E-mail</label>
                          <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" name="email"
                              placeholder="E-mail para acesso" value="{{usuario.email}}" required>
                              {% if error.email %}
                                <span class="help-block">{{error.email}}</span>
                              {% endif %}
                          </div>
                        </div>

                        <div class="form-group {% if error.site %} has-error {% endif %}">
                          <label for="site" class="control-label col-sm-2">Site</label>
                          <div class="col-sm-10">
                            <input type="url" class="form-control" id="site" name="site"
                              placeholder="http://example.com" value="{{usuario.site}}">
                              {% if error.site %}
                                <span class="help-block">{{error.site}}</span>
                              {% endif %}
                          </div>
                        </div>

                        <div class="form-group {% if error.senha %} has-error {% endif %}">
                          <label for="password" class="control-label col-sm-2">Senha</label>
                          <div class="col-sm-10">
                            <input type="password" class="form-control" id="senha" name="senha"
                              placeholder="Digite sua senha" required>
                              {% if error.senha %}
                                <span class="help-block">{{error.senha}}</span>
                              {% endif %}
                          </div>
                        </div>

                        <div class="form-group {% if error.senhaconfirm %} has-error {% endif %}">
                          <label for="site" class="control-label col-sm-2">Confirmar senha</label>
                          <div class="col-sm-10">
                            <input type="password" class="form-control" id="senhaconfirm" name="senhaconfirm"
                              placeholder="Confirme sua senha" required>
                              {% if error.senhaconfirm %}
                                <span class="help-block">{{error.senhaconfirm}}</span>
                              {% endif %}
                          </div>
                        </div>
                        <div class="form-group">
                          <div class="control-label col-sm-2"></div>
                          <div class="col-sm-10">
                          <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                            Criar conta
                          </button>
                          &nbsp;
                          <a href="/login" class="btn btn-danger">
                            <span class="glyphicon glyphicon-remove"></span>
                            Voltar
                          </a>
                          </div>
                        </div>
                      </fieldset>
                  </form>
              </div>
          </div>
      </div>
  </div>
</body>
</html>