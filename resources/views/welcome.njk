{% extends 'template/master' %}

{% block content %}
<body>

  <h1>Bem vindo, {{currentUser.nome}}!</h1>

  <div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Seus contatos</h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Data de cadastro</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          {% for contato in contatos %}
            <tr>
              <th scope=row>{{contato.id}}</th>
              <td>{{contato.nome}}</td>
              <td>{{contato.email}}</td>
              <td>{{contato.datacadastro | formatDate('DD/MM/YYYY HH:mm')}}</td>
              
              <td>
                <a href="/contatos/{{contato.id}}" class="btn btn-primary" aria-label="Center Align">
                  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </a>
                &nbsp;
                <a href="/contatos/{{contato.id}}/edit" class="btn btn-success" aria-label="Center Align">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
</body>
{% endblock %}
